{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "plugin:prettier/recommended",
    "plugin:ava/recommended"
  ],
  "plugins": ["prettier", "ava", "node"],
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "node/no-unpublished-require": 0,
    "node/no-unsupported-features": ["error", { "ignores": ["modules"] }]
  }
}
